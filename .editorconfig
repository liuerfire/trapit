# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{c,cc,cpp,h,hh,hpp}]
indent_style = space
indent_size = 4

[*.{sh,bash,cmake,json}]
indent_style = space
indent_size = 2

[CMakeLists.txt]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
